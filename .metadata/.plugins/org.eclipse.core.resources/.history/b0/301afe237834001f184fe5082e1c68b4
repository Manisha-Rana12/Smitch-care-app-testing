	@BeforeTest
	public void test1() throws MalformedURLException {
		
		driver = smitchCareCaps();
		
		driver.manage().timeouts().implicitlyWait(10, TimeUnit.SECONDS);
	}
	
	@Test(priority = 1)
	public void login() {
		driver.findElement(MobileBy.id("com.mysmitch.care:id/txtLogin")).click();
	}
